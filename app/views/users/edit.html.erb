<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container'>
    <div class='row'>
      <div class="col-sm-12 col-sm-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>

        <% if @user.errors.any? %>
          <div id="error_explanation">
          <% if @user.errors.count == 1 %>
            <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
          <% else %>
            <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
          <% end %>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_with model: @user, local: true do |f| %>

          <div class="form-group">
            <%= f.label "Name" %>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label "Introduction" %>
            <%= f.text_area :introduction, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.submit "Update User", class: 'btn btn-secondary' %>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</main>