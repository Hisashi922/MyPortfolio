<!--Anken Comment New-->

<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container'>
    <div class='row'>
      <div class="col-sm-12 col-sm-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>コメント</h2>

        <% if @comment.errors.any? %>
          <div id="error_explanation">
          <% if @comment.errors.count == 1 %>
            <h3><%= @comment.errors.count %> error prohibited this obj from being saved:</h3>
          <% else %>
            <h3><%= @comment.errors.count %> errors prohibited this obj from being saved:</h3>
          <% end %>
            <ul>
              <% @comment.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <h3><%= @project.project_name %></h3>

        <%= form_with model: @comment, url: 'new_project_comment_path', local: true do |c| %>

          <div class="form-group">
            <%= c.label "コメント" %>
            <%= c.text_area :body, autofocus: true, autocomplete: "name", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= c.submit "コメントを返信", class: 'btn btn-secondary' %>
          </div>

         <% end %>

      </div>
    </div>
  </div>
</main>