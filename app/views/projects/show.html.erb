<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container'>
    <div class='row justify-content-end'>
      <div class='col-4'>
        User Name: <%= current_user.name %>
        <%= link_to "コメント入力", new_project_comment_path(@project), class: "btn btn-outline-secondary btn-block" %>
      </div>
    </div>
    <div class='row'>
      <div class='col-md-12'>
        <h2>案件詳細</h2>
        <table class='table table-striped'>
          <tr>
            <th>案件名</th>
            <th><%= @project.project_name %></th>
          </tr>
          <tr>
            <th>詳細</th>
            <th><%= @project.content %></th>
          </tr>
          <tr>
            <th>オーナー</th>
            <th><%= @project.user.name %></th>
          </tr>
          <tr>
            <th>投稿日</th>
            <th><%= @project.created_at %></th>
          </tr>
        </table>
        <br />
        <% @comments.each do |comment| %>
          <% if comment.project_id == @project %>
            <table class='table table-striped'>
              <tr>
                <th>ユーザー</th>
                <th><%= comment.user.name %></th>
              </tr>
              <tr>
                <th>コメント</th>
                <th><%= comment.body %></th>
              </tr>
            </table>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</main>