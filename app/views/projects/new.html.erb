<!-- Anken new.html.erb-->

<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container'>
    <div class='row'>
      <div class="col-sm-12 col-sm-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>新規案件</h2>

        <% if @project.errors.any? %>
          <div id="error_explanation">
          <% if @project.errors.count == 1 %>
            <h3><%= @project.errors.count %> error prohibited this obj from being saved:</h3>
          <% else %>
            <h3><%= @project.errors.count %> errors prohibited this obj from being saved:</h3>
          <% end %>
            <ul>
              <% @project.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_with model: @project, local: true do |f| %>

          <div class="form-group">
            <%= f.label "案件名" %>
            <%= f.text_field :project_name, autofocus: true, autocomplete: "name", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label "詳細" %>
            <%= f.text_area :content, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.submit "新規登録", class: 'btn btn-secondary' %>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</main>