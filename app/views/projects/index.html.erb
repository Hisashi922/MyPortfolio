<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>

      <div class='col-md-3'>
        <%= link_to "新規案件登録", new_project_path, class: "btn btn-outline-secondary btn-block" %>
      </div>

      <div class='col-md-8 offset-md-1'>
        <h2>案件一覧</h2>
          <table class='table table-hover table-inverse'>
            <thead>
              <tr>
                <th>投稿日</th>
                <th>案件名</th>
                <th>詳細</th>
                <!--<th colspan="3"></th>-->
              </tr>
            </thead>
            <tbody>
              <% @projects.each do |project| %>
              <tr>
                <td>
                  <%= project.created_at %>
                </td>
                <td>
                  <%= link_to project.project_name, project_path(project.id) %>
                </td>
                <td>
                  <%= project.content %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</main>